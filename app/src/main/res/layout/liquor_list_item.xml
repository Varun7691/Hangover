<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/liquor_background_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/craftbeer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AA5D4037"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/liquor_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Beer"
                    android:textColor="@color/md_grey_300"
                    android:textSize="16sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#e5e5e5" />

                <TextView
                    android:id="@+id/liquor_brand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kingfisher"
                    android:textColor="@color/md_grey_300"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/liquor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kingfisher Premium"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/liquor_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="A 7 year old rum from Uttar Pradesh in India. It's one of the largest selling rums in the world, almost all thanks to word of mouth."
                android:textColor="@color/md_grey_300"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/liquor_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="123"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

    </FrameLayout>
</android.support.v7.widget.CardView>